---
import styles from "./place.module.scss";

interface Data {
	img: string;
	title: string;
	text: string;
}

interface Props {
	data: Data;
}

const { img, title, text } = Astro.props.data;
---

<div class={`${styles.card} place-card`}>
	<div class={styles.image}>
		<img src={img} alt="title" height="400" width="400" />

		<h3>{title}</h3>
	</div>

	<div class={styles.info}>
		<h3>{title}</h3>

		<p>{text}</p>
	</div>
</div>

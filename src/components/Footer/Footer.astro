---
import styles from "./footer.module.scss";
import { phone, email, address, social } from "@data/contact";
import { Icon } from "astro-icon/components";
---

<footer class={styles.footer}>
	<div class="container">
		<div class={styles.container}>
			<div class={styles.map}>
				<iframe
					src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d16259.608591909611!2d77.16883054127237!3d28.641615290484715!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390d0316dd0efc93%3A0x144fd09c311c1c5d!2sTravel%20Eyes%20Pvt%20Ltd!5e0!3m2!1sen!2sin!4v1705854692917!5m2!1sen!2sin"
					style="border:0;"
					width="200"
					height="200"
					allowfullscreen=""
					loading="lazy"
					referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>

			<div class={styles.address}>
				<h4>How to reach us</h4>

				<p>
					<span>{address.name}</span><span>{address.address}</span
					><span>{address.place}</span><span>{address.city}</span>
				</p>

				<a href={`tel:${phone}`}>{phone}</a>
				<a href={`mailto:${email}`}>{email}</a>
			</div>

			<div class={styles.pages}>
				<h4>Navigate</h4>

				<ul class={styles.links}>
					<li>
						<a href="/">Home</a>
					</li>
					<li>
						<a href="/about-us/">About Us</a>
					</li>
					<li>
						<a href="/contact-us/">Contact Us</a>
					</li>
				</ul>
			</div>

			<div class={styles.socials}>
				<h4>Connect With Us</h4>

				<div class={styles.icons}>
					<a
						target="_blank"
						href={social.facebook}
						data-name="facebook"><Icon name="mdi:facebook" /></a
					>
					<a target="_blank" href={social.twitter} data-name="twitter"
						><Icon name="mdi:twitter" /></a
					>
					<a
						target="_blank"
						href={social.whatsapp}
						data-name="whatsapp"><Icon name="mdi:whatsapp" /></a
					>
					<a
						target="_blank"
						href={social.linkedin}
						data-name="linkedin"><Icon name="mdi:linkedin" /></a
					>
				</div>
			</div>
		</div>

		<div class={styles.copyright}>
			Copyright Â© 2024, Travel Eyes Pvt Ltd All rights reserved.
		</div>
	</div>
</footer>

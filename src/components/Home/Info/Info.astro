---
import styles from "./info.module.scss";

import { places } from "../../../data/cards";
import PlaceCard from "../../Cards/Places/Place.astro";
import Button from "@components/Button-cta/Button.astro";
---

<div class={styles.info}>
	<div class="container">
		<div class={styles.container}>
			<h2 class={styles.heading}>Featured Places</h2>

			<div class={styles.items}>
				{
					places.map((place) => {
						return <PlaceCard data={place} />;
					})
				}
			</div>

			<div class={styles.button}>
				<Button variant="default">Book Today</Button>
			</div>
		</div>
	</div>
</div>
